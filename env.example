# Environment variables for Story Time application
# Copy this file to .env and fill in your actual values

# Database Configuration
DB_URL=mysql://storytime:password@localhost:3306/storytime

# Redis Configuration
REDIS_URL=redis://localhost:6379

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here

# AWS Configuration (for production)
AWS_REGION=us-east-1
S3_BUCKET=storytime-assets
CLOUDFRONT_DOMAIN=your_cloudfront_domain

# Email Configuration
SES_REGION=us-east-1
FROM_EMAIL=noreply@storytime.com

# Application Configuration
APP_ENV=development
LOG_LEVEL=debug
PORT=3000

# Feature Flags
FEATURE_IMAGES_UPSCALE_ENABLED=false
FEATURE_STORIES_DIALOGUE_ENABLED=true
FEATURE_BILLING_MARKETPLACE_ENABLED=false
FEATURE_PDF_BLEED_ENABLED=false
